<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/parent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">


        <ImageView android:src="@drawable/img_women"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal" />


        <LinearLayout
            android:id="@+id/EditBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:layout_gravity="center"
            android:background="@drawable/rounded_edit_text"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:text="Person Name:"
                    android:textColor="@color/primary_dark"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/uname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:text="Username:"
                    android:textColor="@color/primary_dark"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:text="Gender:"
                    android:textColor="@color/primary_dark"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/dob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:text="Birth Date:"
                    android:textColor="@color/primary_dark"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:text="Contact Number:"
                    android:textColor="@color/primary_dark"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:text="Email ID:"
                    android:textColor="@color/primary_dark"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:layout_weight="5"
                android:orientation="vertical">

                <TextView android:id="@+id/tname"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp"
                    android:hint="Name"
                    android:textColor="@color/primary_text"/>


                <TextView android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp"
                    android:hint="User Name"
                    android:textColor="@color/primary_text"/>


                <TextView android:id="@+id/tgen"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:hint="Gender"
                    android:textColor="@color/primary_text"/>


                <TextView android:id="@+id/tbday"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp"
                    android:hint="Birth Day"
                    android:textColor="@color/primary_text"/>


                <TextView android:id="@+id/tmob"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:hint="Contact Number"
                    android:textColor="@color/primary_text"/>



                <TextView android:id="@+id/temail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp"
                    android:hint="Email"
                    android:textColor="@color/primary_text"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
