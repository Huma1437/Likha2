    android:layout_margin="40dp">
    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_likha"/>

</LinearLayout>



</RelativeLayout>

